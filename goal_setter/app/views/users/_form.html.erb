<% if action == :new 
    action_url = users_url 
    button_text = 'Create User'
  else
    action_url = session_url
    button_text = 'This is the Log In button'
  # else
  #   # action_url = user_url 
  #   # button_text = 'Edit User'
  end %>

<form action="<%= action_url %>" method="post">
  <%= auth_token %>
  
  <label for="user_email">Email
  <input id="user_email" type="text" name="user[email]">
  </label>
  
  <label for="user_password">Password
  <input id="user_password" type="password" name="user[password]">
  </label>
  
  <input type="submit" value="<%= button_text %>">
  
</form>